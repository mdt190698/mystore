<h2 class="login-title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Email Address", class: "form-label" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
  </div>

  <div class="field">
    <%= f.label :password, "Password", class: "form-label" %><br>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember-me">
      <%= f.check_box :remember_me, class: "form-checkbox" %>
      <%= f.label :remember_me, "Remember me", class: "checkbox-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "submit-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
